<Window x:Class="CnnApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CnnApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="22*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.ColumnSpan="2">
            <StackPanel Orientation="Horizontal">
                <Button Name="UploadButton" Content="上传文件" Click="UploadButton_Click" Margin="10" Height="117" Width="252"/>
                <Button Name="DownloadButton" Content="下载文件" Click="DownloadButton_Click" Margin="10" Height="117" Width="220"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button Name="ExecuButton" Content="执行文件" Click="ExecuButton_Click" Margin="10" Height="130" Width="493"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
